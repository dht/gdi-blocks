{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2020",
        "module": "ES2022",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationDir": "dist/dts",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["types-base", "@gdi/types", "@types/jest"]
    },
    "include": ["src/*.ts", "test/*.ts"]
}
